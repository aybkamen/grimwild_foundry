{{#unless isPrivate}}
<section class="grimwild-chat grimwild-roll {{result}} stroke stroke-top">
  <div class="results">
    <h2>{{#if isCut }}
      {{localize (concat "GRIMWILD.Dice.results." rawResult)}} &#8594; 
      {{/if}}
      {{localize (concat "GRIMWILD.Dice.results." result)}}</h2>
    <em>{{stat}}</em>
  </div>
  <div class="dice-tooltip expanded">
    <section class="tooltip-part">
      <div class="dice">
        <div class="dice-row">
          <span>acci√≥n ({{actionDiceCount}}d6):</span>
          <ul class="dice-rolls">
            {{#each dice as |die key|}}
              <li class="roll die d6 action {{#if die.eliminated}}eliminated{{/if}} {{#if die.chosen}}chosen{{/if}}">{{die.result}}</li>
            {{/each}}
          </ul>
          {{#each assists}}
            <ul class="dice-rolls">
              <span> &#8594; {{@key}}</span>
              {{#each this as |die key|}}
                <li class="roll die d6 action {{#if die.eliminated}}eliminated{{/if}} {{#if die.chosen}}chosen{{/if}}">{{die.result}}</li>
              {{/each}}
            </ul>
          {{/each}}
        </div>
        <div class="dice-row">
          <span>danger ({{dangerDiceCount}}d6):</span>
          <ul class="dice-rolls">
            {{#each danger as |die key|}}
              <li class="roll die d6 danger {{#if die.killer}}killer{{/if}}">{{die.result}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </section>
  </div>
  {{#if hasActions}}
  <div class="action-links">
    {{#if (eq result "disaster")}}
    <button data-action="updateSpark"><i class="fas fa-bolt"></i> Take spark</button>
    {{/if}}
  </div>
  {{/if}}
</section>
{{/unless}}
